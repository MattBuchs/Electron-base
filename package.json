{
    "name": "escape-time",
    "version": "1.0.0",
    "description": "Un Timer conçue pour les escape game, ils peuvent gérer le temps de jeu la musique... Il y a 2 fenêtres une pour le maitre du jeu et une pour les joueurs.",
    "main": "main.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "electron .",
        "compile-sass": "sass src/css/mainWindow/index.scss src/css/mainWindow/compilation/output.css",
        "watch-sass": "sass --watch src/css/mainWindow/index.scss:src/css/mainWindow/compilation/output.css",
        "package": "electron-packager . EscapeTime --platform=win32 --arch=x64 --out=dist"
    },
    "build": {
        "appId": "com.matt.escape-time",
        "productName": "EscapeTime",
        "copyright": "Copyright © 2024 Matt Buchs",
        "icon": "./public/img/AngelsGame.ico",
        "files": [
            "./build/**/*",
            "./dist/**/*",
            "./node_modules/**/*",
            "./public/**/*",
            "*.js"
        ],
        "directories": {
            "buildResources": "public"
        }
    },
    "keywords": [],
    "author": "Matt Buchs",
    "license": "ISC",
    "devDependencies": {
        "electron": "^25.5.0",
        "sass": "^1.69.7"
    },
    "dependencies": {
        "electron-reload": "^2.0.0-alpha.1",
        "electron-store": "^8.1.0"
    }
}
